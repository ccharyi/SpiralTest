<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_spiral_test_results"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.spiraltest.Team15ResultActivity">

<TextView
    android:layout_centerInParent="true"
    android:id="@+id/spiral_results_test_finished_text"
    android:textSize="20sp"
    android:text="Thanks for taking the spiral test!"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="176dp" />

<Button
    android:padding="25dp"
    android:textSize="20sp"
    android:text="Share Results?"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/spiral_results_share_button" />

<ImageView
    android:layout_below="@id/spiral_results_test_finished_text"
    android:id="@+id/spiral_results_result_preview"
    android:scaleType="fitCenter"
    android:layout_above="@id/spiral_results_share_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/score"
    android:textAppearance="@android:style/TextAppearance.Material.Large"
    android:textSize="100sp"
    android:layout_above="@+id/spiral_results_result_preview"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="32dp"
    android:text="75" />

<TextView
    android:text="Score out of 100:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/score"
    android:layout_centerHorizontal="true"
    android:id="@+id/textView2" />
</RelativeLayout>