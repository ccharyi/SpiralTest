<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:id="@+id/activity_team12"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.spiraltest.Team12">

<TextView android:id="@+id/directions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#000000"
    android:text="Using the index finger of your chosen hand, trace the black spiral below from the outside in."/>

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ctrlPtsCheckBox"
    android:text="Visualize control points (invalidates score)"
    android:textSize="17dp"
    android:layout_below="@+id/directions"/>

<Button android:id="@+id/traceStart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tap to Trace"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/ctrlPtsCheckBox"
    android:textSize="18dp"/>

<Button android:id="@+id/traceDone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tap when Done"
    android:layout_alignParentRight="true"
    android:layout_below="@id/ctrlPtsCheckBox"
    android:textSize="18dp"/>

<ImageView android:id="@+id/spiral"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:padding="1dp"
    android:cropToPadding="true"
    android:scaleType="centerCrop"
    android:background="#000000"/>

<TextView android:id="@+id/traceScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:textSize="30dp"
    android:textColor="#000000"
    android:visibility="gone"/>

<Button android:id="@+id/traceHistory"
    android:text="History"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/traceStart"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="27dp"
    android:visibility="invisible"/>

<Button android:id="@+id/return_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="20dp"
    android:text="Done"
    android:textSize="30dp"
    android:visibility="gone"/>

</RelativeLayout>